generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  passwordHash       String
  username           String   @unique

  companionBondLevel Int      @default(0)

  lastLoginAt        DateTime?
  lastActiveDate     DateTime?

  createdAt          DateTime @default(now())

  habits             Habit[]
  habitCheckIns      HabitCheckIn[]
}


enum HabitPriority {
  LOW
  MEDIUM
  HIGH
}

enum HabitRepeatInterval {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}



model Habit {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title           String
  description     String?

  priority        HabitPriority      @default(MEDIUM)
  category        String?

  repeatInterval  HabitRepeatInterval @default(DAILY)

  daysOfWeek Int[] @default([])

  targetPerPeriod Int      @default(1)

  startDate       DateTime @default(now())
  endDate         DateTime?

  isArchived      Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  checkIns        HabitCheckIn[]

  @@index([userId])
  @@index([userId, isArchived])
}


model HabitCheckIn {
  id        String   @id @default(cuid())
  userId    String
  habitId   String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  // Normalized date (e.g., midnight UTC)
  day       DateTime

  createdAt DateTime @default(now())

  @@unique([habitId, day])
  @@index([userId, day])
  @@index([habitId, day])
}
